@{
    Layout = "_LayoutHome";

}
@model IEnumerable<GamesStore.Models.Product>

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Site para compra de jogos">
    <meta name="author" content="Leonardo">
    <title>Games-Store</title>
    <!-- CSS -->
    <link rel="stylesheet" href="~/css/home.css">
    <link rel="stylesheet" href="~/css/carouselHome.css">
    <link rel="stylesheet" href="~/css/products.css">

</head>
<body>

    <main>

        <section id="Carrossel">

            <div class="gallery">
                <div class="gallery-container">
                    <img src="./images/hollow-knight.png" alt="" class="gallery-item gallery-item-1" data-index="1">
                    <img src="./images/god of war.png" alt="" class="gallery-item gallery-item-2" data-index="2">
                    <img src="./images/red dead redemption 2.png" alt="" class="gallery-item gallery-item-3" data-index="3">
                    <img src="./images/cyberpunk 2077.png" alt="" class="gallery-item gallery-item-4" data-index="4">
                    <img src="./images/the witcher 3.png" alt="" class="gallery-item gallery-item-5" data-index="5">
                </div>

                <div class="gallery-controls">
                </div>
            </div>

        </section>

        <section id="home">
            <h1>Bem-vindo a Games Store</h1>
            <p>A maior loja de games digitais do Brasil</p>
        </section>

        <section id="products">

            @foreach (var produto in Model)
            {
                <div class="product">
                    <img src=".@produto.PathImage" alt="@produto.Name" class="img-game">
                    <p class="game-name">@produto.Name</p>
                    <div class="price">
                        <p class="discount">@produto.Discount %</p>
                        <p class="previous-price">$@produto.Price</p>
                        @{
                            decimal lastPrice = produto.Price - (produto.Price * produto.Discount / 100);
                        }

                        <p class="last-price">$@lastPrice.ToString("F2")</p>
                        <div class="shopcart">
                            <img src="./images/icon/cart.svg" alt="cartSVG" />
                        </div>
                    </div>
                </div>
            }

        </section>

    </main>

    <!-- JavaScript -->
    <script src="./js/carouselHome.js"></script>
</body>
</html>